{
  "name": "flexera-policy-template",
  "displayName": "Flexera Policy Template Language",
  "description": "Syntax highlighting for Flexera Policy Template (.pt) files",
  "version": "0.1.0",
  "publisher": "flexera",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "flexera-pt",
        "aliases": [
          "Flexera Policy Template",
          "flexera-pt",
          "policy-template"
        ],
        "extensions": [
          ".pt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "flexera-pt",
        "scopeName": "source.flexera-pt",
        "path": "./syntaxes/flexera-pt.tmLanguage.json"
      }
    ]
  }
}
