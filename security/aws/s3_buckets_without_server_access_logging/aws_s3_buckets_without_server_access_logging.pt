end

escalation "esc_enable_logging" do
  automatic false
  label "Enable Server Access Logging"
  description "Approval to enable server access logging on all selected AWS S3 Buckets"
  parameter "param_target_bucket" do
    type "string"
    category "Policy Settings"
    label "Target Bucket"
    description "Name of an existing S3 bucket in same region as source to be used for logging."
    # No default value, user input required
  end
  parameter "param_log_prefix" do
    type "string"
    category "Policy Settings"
    label "Log Prefix"
    description "The prefix for the keys that the log files will be stored under when storing them in the target bucket."
    default ""
  end
  run "enable_logging_buckets", data, $param_target_bucket, $param_log_prefix
end

###############################################################################
# Cloud Workflow
###############################################################################

define enable_logging_buckets($data, $param_target_bucket, $param_log_prefix) return $all_responses do
  $$all_responses = []

  foreach $bucket in $data do
    sub on_error: handle_error() do
      call enable_logging_bucket($bucket, $param_target_bucket, $param_log_prefix) retrieve $enable_response
      $$all_responses << $enable_response
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define enable_logging_bucket($bucket, $param_target_bucket, $param_log_prefix) return $response do
  $log_prefix = $param_log_prefix

  if $log_prefix == ""
    $log_prefix = $bucket["id"] + "-logging"
  end

  $host = $bucket["id"] + ".s3.amazonaws.com"
  $href = '/?logging'
  $url = $host + $href
  $body = "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<BucketLoggingStatus xmlns=\"http://doc.s3.amazonaws.com/2006-03-01\"><LoggingEnabled><TargetBucket>" + $param_target_bucket + "</TargetBucket><TargetPrefix>" + $log_prefix + "</TargetPrefix></LoggingEnabled></BucketLoggingStatus>"
  task_label("PUT " + $url)

  $response = http_request(
    auth: $$auth_aws,
    https: true,
    verb: "put",
    href: $href,
    host: $host,
    body: $body
  )

  task_label("Put AWS S3 Bucket response: " + $bucket["id"] + " " + to_json($response))
  $$all_responses << to_json({"req": "PUT " + $url, "resp": $response})

  if $response["code"] != 200 && $response["code"] != 202 && $response["code"] != 204
    raise "Unexpected response putting AWS S3 Bucket: "+ $bucket["id"] + " " + to_json($response)
  else
    task_label("Put AWS S3 Bucket successful: " + $bucket["id"])
  end
end

define handle_error() do
  if !$$errors
    $$errors = []
  end
  $$errors << $_error["type"] + ": " + $_error["message"]
  # We check for errors at the end, and raise them all together
  # Skip errors handled by this definition
  $_error_behavior = "skip"
end

