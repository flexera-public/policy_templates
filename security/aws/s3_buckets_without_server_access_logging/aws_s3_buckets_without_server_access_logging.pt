end

script "js_aws_buckets_without_server_access_logging", type:"javascript" do
  parameters "ds_aws_buckets_with_logging", "ds_aws_account", "ds_applied_policy", "param_exclude_buckets"
  result "result"
  code <<-'EOS'
  bad_buckets = _.filter(ds_aws_buckets_with_logging, function(bucket) {
    return bucket['target_bucket'] == '' && _.contains(param_exclude_buckets, bucket['id']) == false
  })

  result = _.map(bad_buckets, function(bucket) {
    tags = []

    if (typeof(bucket['tags']) == 'object') {
      tags = _.map(bucket['tags'], function(tag) { return tag['key'] + '=' + tag['value'] })
    }

    return {
      accountID: ds_aws_account['id'],
      accountName: ds_aws_account['name'],
      id: bucket['id'],
      region: bucket['region'],
      creation_date: bucket['creation_date'],
      tags: tags.join(', '),
      policy_name: ds_applied_policy['name']
    }
  })

  // Dummy entry to ensure validation occurs
  result.push({
    accountID: '',
    accountName: '',
    id: '',
    region: '',
    creation_date: '',
    tags: '',
    policy_name: ''
  })
EOS
end

