escalation "alert_aws" do
   email $escalate_to
end

policy "iam_policies" do
  validate_each $ds_policy_definition do
    summary_template "IAM Policies Found in AWS"
    detail_template <<-EOS
# Policies Found in AWS
| Policy Name |  Policy ID |  Policy ARN | 
| ----------- |
{{ range data -}}
| {{.name}} |{{.id}} |{{.arn}} |
{{ end -}}
EOS
    escalate $alert_aws
    check eq(1,0)
  end
end
