// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	"build": {
    "dockerfile": "Dockerfile"
  },

	// Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
		// "ghcr.io/devcontainers/features/node:1": { "version": "12.22" },
		// "ghcr.io/devcontainers/features/python:1": { "version": "3.10" },
		// "ghcr.io/devcontainers/features/ruby:1": { "version": "3.2" },
    // "ghcr.io/devcontainers/features/go:1": { "version": "1.18" },
		// "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
		// "ghcr.io/devcontainers/features/aws-cli:1": {},
		// "ghcr.io/devcontainers/features/azure-cli:1": {},
    // "ghcr.io/dhoeric/features/google-cloud-cli:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers-contrib/features/act:1": {}
	},

	// Configure tool-specific properties.
	"customizations": {
    "vscode": {
      "extensions": [
        "davidanson.vscode-markdownlint",
        "formulahendry.code-runner",
        "jamesls.jmespath-vscode",
        "shopify.ruby-extensions-pack",
        "shopify.ruby-lsp",
        "dbaeumer.vscode-eslint",
        "dotjoshjohnson.xml",
        "EditorConfig.EditorConfig",
        "streetsidesoftware.code-spell-checker",
        "redhat.vscode-yaml",
        "ms-python.python",
        "fknop.vscode-npm",
        "aws-scripting-guy.cform"
      ]
    }
  },

  // Mounts
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.fpt.yml,target=/home/vscode/.fpt.yml,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ]
}
