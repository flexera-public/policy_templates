policy "pol_utilization" do
  validate $ds_instance_cost_mapping do
    summary_template "{{ rs_project_name }} (Account ID: {{ rs_project_id }}): {{ len data.idle_instances}} rows containing AWS instance CloudWatch utilization data"
    detail_template <<-EOS
