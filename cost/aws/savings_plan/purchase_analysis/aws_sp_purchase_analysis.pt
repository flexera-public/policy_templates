      # "EstimatedOnDemandCost": "string",
      # "EstimatedOnDemandCostWithCurrentCommitment": "string",
      # "EstimatedROI": "string",
      # "EstimatedSavingsAmount": "string",
      # "EstimatedSavingsPercentage": "string",
      # "ExistingHourlyCommitment": "string",
      # "HourlyCommitmentToPurchase": "string",
      # "LatestUsageTimestamp": "string",
      # "LookbackPeriodInHours": "string",
      # "MetricsOverLookbackPeriod": [
      #   {
      #       "CurrentCoverage": "string",
      #       "EstimatedCoverage": "string",
      #       "EstimatedNewCommitmentUtilization": "string",
      #       "EstimatedOnDemandCost": "string",
      #       "StartTime": "string"
      #   }
      # ],
      # "UpfrontCost": "string"
  end
end

script "js_collect_analysis", type: "javascript" do
  parameters "ds_start_analysis"
  result "request"
  code <<-'EOS'
  function sleep(seconds) {
    now = new Date().getTime()
    while(new Date().getTime() < now + (seconds * 1000)) { /* Do nothing */ }
    return now
  }

  // Wait until we reach the estimated completion time provided by AWS
  estimatedCompletionTime = new Date(estimatedCompletionTime)
  while(new Date() - estimatedCompletionTime < 0) { /* Do nothing */ }

  // Wait a little bit extra just to be sure
  sleep(60)

  var request = {
    auth: "auth_aws",
    pagination: "pagination_aws",
    verb: "POST",
    host: "ce.us-east-1.amazonaws.com",
    path: "/",
    headers: {
      "User-Agent": "RS Policies",
      "X-Amz-Target": "AWSInsightsIndexService.GetCommitmentPurchaseAnalysis",
      "Content-Type": "application/x-amz-json-1.1"
    },
    body_fields: {
      "AnalysisId": ds_start_analysis["id"]
    }
  }
EOS
end

# Branching logic:
# This datasource returns an empty array if the target currency is USD.
# This prevents ds_currency_conversion from running if it's not needed.
datasource "ds_conditional_currency_conversion" do
  run_script $js_conditional_currency_conversion, $ds_currency_target, $ds_collect_analysis
end

script "js_conditional_currency_conversion", type: "javascript" do
  parameters "ds_currency_target", "ds_collect_analysis"
  result "result"
  code <<-'EOS'
  result = []
  from_currency = "USD"

  if (ds_collect_analysis && ds_collect_analysis["analysisDetails"] && ds_collect_analysis["analysisDetails"]["CurrencyCode"]) {
    from_currency = ds_collect_analysis["analysisDetails"]["CurrencyCode"]
  }

  // Make the request only if the target currency is not USD
  if (ds_currency_target['code'] != from_currency) {
    result = [{ from: from_currency }]
  }
EOS
end

datasource "ds_currency_conversion" do
  # Only make a request if the target currency is not USD
  iterate $ds_conditional_currency_conversion
  request do
    host "api.xe-auth.flexeraeng.com"
    path "/prod/{proxy+}"
    query "from", val(iter_item, 'from')
    query "to", val($ds_currency_target, 'code')
    query "amount", "1"
    # Ignore currency conversion if API has issues
    ignore_status [400, 404, 502]
  end
  result do
    encoding "json"
    field "from", jmes_path(response, "from")
    field "to", jmes_path(response, "to")
    field "amount", jmes_path(response, "amount")
    field "year", jmes_path(response, "year")
  end
end

datasource "ds_currency" do
  run_script $js_currency, $ds_currency_target, $ds_currency_conversion
end

script "js_currency", type:"javascript" do
  parameters "ds_currency_target", "ds_currency_conversion"
  result "result"
  code <<-'EOS'
  result = ds_currency_target
  result['exchange_rate'] = 1

  if (ds_currency_conversion.length > 0) {
    currency_code = ds_currency_target['code']
    current_month = parseInt(new Date().toISOString().split('-')[1])

    conversion_block = _.find(ds_currency_conversion[0]['to'][currency_code], function(item) {
      return item['month'] == current_month
    })

    if (conversion_block != undefined) {
      result['exchange_rate'] = conversion_block['monthlyAverage']
    }
  }
EOS
end

datasource "ds_analysis_incident" do
  run_script $js_analysis_incident, $ds_collect_analysis, $ds_currency, $ds_conditional_currency_conversion, $ds_aws_account, $ds_applied_policy, $param_scope, $param_days, $param_payment_option, $param_term, $param_savings_plan_type, $param_hourly_commitment, $param_region, $param_instance_family, $param_offering_id, $param_incident_csv
end

script "js_analysis_incident", type: "javascript" do
  parameters "ds_collect_analysis", "ds_currency", "ds_conditional_currency_conversion", "ds_aws_account", "ds_applied_policy", "param_scope", "param_days", "param_payment_option", "param_term", "param_savings_plan_type", "param_hourly_commitment", "param_region", "param_instance_family", "param_offering_id", "param_incident_csv"
  result "result"
  code <<-'EOS'
  // Used for formatting numbers to look pretty
  function formatNumber(number, separator) {
    formatted_number = "0"

    if (number) {
      formatted_number = (Math.round(number * 100) / 100).toString().split(".")[0]

      if (separator) {
        withSeparator = ""

        for (var i = 0; i < formatted_number.length; i++) {
          if (i > 0 && (formatted_number.length - i) % 3 == 0) { withSeparator += separator }
          withSeparator += formatted_number[i]
        }

        formatted_number = withSeparator
      }

      decimal = (Math.round(number * 100) / 100).toString().split(".")[1]
      if (decimal) { formatted_number += "." + decimal }
    }

    return formatted_number
  }

  // Used for rounding and currency conversion
  function convertCurrency(number) {
    return number ? Math.round(number * ds_currency['exchange_rate'] * 1000) / 1000 : ""
  }

  // Messaging for currency conversion
  currency = ds_currency['code']

  if (ds_conditional_currency_conversion[0] != undefined) {
    currency = ds_conditional_currency_conversion[0]['from']
  }

  conversion_message = ""

  if (ds_currency['code'] != currency && ds_currency_conversion.length > 0 && exchange_rate != 1) {
    conversion_message = [
      "Currency values were converted from ", currency, " to ", ds_currency['code'],
      " using an exchange rate of ", exchange_rate, ".\n\n"
    ].join('')
  }

  if (ds_currency['code'] != currency && ds_currency_conversion.length == 0) {
    conversion_message = "Currency values are in ", currency, " due to a malfunction with Flexera's internal currency conversion API. Please contact Flexera support to report this issue."
  }

  message = [
    conversion_message,
    "The following settings were used for the commitment purchase analysis:\n",
    "- Savings Plan Type: ", param_savings_plan_type, "\n",
    "- Account Scope: ", param_scope, "\n",
    "- Term: ", param_term, "\n",
    "- Look Back Period: ", param_days, "\n",
    "- Payment Option: ", param_payment_option, "\n",
    "- Hourly Commitment: ", param_hourly_commitment, "\n"
  ]

  if (param_region) { message.push("- Region: ", param_region, "\n") }
  if (param_instance_family) { message.push("- Instance Family: ", param_instance_family, "\n") }
  if (param_offering_id) { message.push("- Offering ID: ", param_offering_id, "\n") }

  message.push("\nThe above settings can be modified by editing the applied policy and changing the appropriate parameters.\n\n")
  message.push("Empty fields indicate information that is not applicable to this analysis.\n\n")

  service_table = {
    "Compute Savings Plan": "Compute",
    "EC2 Instance Savings Plan": "EC2",
    "SageMaker Savings Plans": "SageMaker"
  }

  result = [{
    additionalMetadata: ds_collect_analysis["analysisDetails"]["AdditionalMetadata"],
    currentAverageCoverage: ds_collect_analysis["analysisDetails"]["CurrentAverageCoverage"],
    currentAverageHourlyOnDemandSpend: convertCurrency(ds_collect_analysis["analysisDetails"]["CurrentAverageHourlyOnDemandSpend"]),
    currentMaximumHourlyOnDemandSpend: convertCurrency(ds_collect_analysis["analysisDetails"]["CurrentMaximumHourlyOnDemandSpend"]),
    currentMinimumHourlyOnDemandSpend: convertCurrency(ds_collect_analysis["analysisDetails"]["CurrentMinimumHourlyOnDemandSpend"]),
    currentOnDemandSpend: convertCurrency(ds_collect_analysis["analysisDetails"]["CurrentOnDemandSpend"]),
    estimatedAverageCoverage: ds_collect_analysis["analysisDetails"]["EstimatedAverageCoverage"],
    estimatedAverageUtilization: ds_collect_analysis["analysisDetails"]["EstimatedAverageUtilization"],
    estimatedCommitmentCost: convertCurrency(ds_collect_analysis["analysisDetails"]["EstimatedCommitmentCost"]),
    estimatedOnDemandCost: convertCurrency(ds_collect_analysis["analysisDetails"]["EstimatedOnDemandCost"]),
    estimatedOnDemandCostWithCurrentCommitment: convertCurrency(ds_collect_analysis["analysisDetails"]["EstimatedOnDemandCostWithCurrentCommitment"]),
    estimatedROI: convertCurrency(ds_collect_analysis["analysisDetails"]["EstimatedROI"]),
    estimatedSavingsAmount: convertCurrency(ds_collect_analysis["analysisDetails"]["EstimatedSavingsAmount"]),
    estimatedSavingsPercentage: ds_collect_analysis["analysisDetails"]["EstimatedSavingsPercentage"],
    existingHourlyCommitment: ds_collect_analysis["analysisDetails"]["ExistingHourlyCommitment"],
    hourlyCommitmentToPurchase: ds_collect_analysis["analysisDetails"]["HourlyCommitmentToPurchase"],
    latestUsageTimestamp: ds_collect_analysis["analysisDetails"]["LatestUsageTimestamp"],
    lookbackPeriodInHours: ds_collect_analysis["analysisDetails"]["LookbackPeriodInHours"],
    upfrontCost: convertCurrency(ds_collect_analysis["analysisDetails"]["UpfrontCost"]),
    currency: ds_currency['symbol'],
    accountID: ds_aws_account["id"],
    accountName: ds_aws_account["name"],
    term: param_term,
    paymentOption: param_payment_option,
    lookbackPeriod: param_days,
    service: service_table[param_savings_plan_type],
    scope: param_scope,
    hourly_commitment: param_hourly_commitment,
    region: param_region,
    instance_family: param_instance_family,
    offering_id: param_offering_id,
    policy_name: ds_applied_policy['name'],
    message: message.join('')
  }]
EOS
end

###############################################################################
# Policy
###############################################################################

policy "pol_aws_sp_recommendations" do
  validate_each $ds_analysis_incident do
    summary_template "{{ with index data 0 }}{{ .policy_name }}{{ end }} - Analysis Results"
    detail_template <<-'EOS'
    **Potential Savings:** {{ with index data 0 }}{{ .estimatedSavingsAmount }}{{ end }}

    {{ with index data 0 }}{{ .message }}{{ end }}
    EOS
    check lt(val(item, "estimatedSavingsAmount"), 0)
    escalate $esc_email
    export do
      resource_level false
      field "accountID" do
        label "Account ID"
      end
      field "accountName" do
        label "Account Name"
      end
      field "currency" do
        label "Currency"
      end
      field "upfrontCost" do
        label "Upfront Cost"
      end
      field "hourlyCommitmentToPurchase" do
        label "Hourly Commitment To Purchase"
