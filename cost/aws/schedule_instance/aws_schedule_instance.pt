###############################################################################
# Policy
###############################################################################

policy "pol_schedule_instance" do
  validate $ds_policy_incident_action_failed_details do
    summary_template "{{ with index data 0 }}{{ .policy_name }}{{ end }}: Failed Actions"
    detail_template <<-EOS
The following actions failed:
{{ range data }}
**[{{ .incident_summary }}](https://{{ .ui_host }}/orgs/{{ rs_org_id }}/automation/incidents/projects/{{ rs_project_id }}?incidentId={{ .incident_id }})**
{{ range .failed_action_items }}
```
{{ .error }}
```
{{ end }}
{{ end }}
    EOS
    check logic_or($ds_parent_policy_terminated, eq(size(data), 0))
    escalate $esc_email_error
  end

  validate_each $ds_instances_schedule_result_action_start do
    summary_template "{{ with index data 0 }}{{ .policy_name }}{{ end }}: Starting {{ len data }} Instances"
    detail_template <<-EOS
The following AWS Instances are scheduled to start now:
{{ range data }}
- {{ .resourceName }} in AWS Account{{ if .accountName }} {{.accountName}}{{ end }} `{{ .accountID }}` is scheduled to start at {{ .next_start }}.
{{ end }}
EOS
