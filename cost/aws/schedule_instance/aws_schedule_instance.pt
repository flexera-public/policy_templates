define terminate_instance($instance) return $response do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=TerminateInstances&Version=2016-11-15&InstanceId.1=" + $instance['resourceID']
    $url = $host + $href + $params
    call task_label("POST " + $url)

    $response = http_request(
      auth: $$auth_aws,
      https: true,
      verb: "post",
      href: $href,
      host: $host,
      query_strings: {
        "Action": "TerminateInstances",
        "Version": "2016-11-15",
        "InstanceId.1": $instance['resourceID']
      }
    )

    call task_label("Terminate AWS Instance response: " + to_s($response["code"]))
    $$all_responses << to_json({"req": "POST " + $url, "resp": $response})

    if $response["code"] != 202 && $response["code"] != 200
      raise "Unexpected response terminating AWS Instance: " + $instance['resourceID'] + " " + to_json($response)
    else
      call task_label("Terminate AWS Instance successful: " + $instance['resourceID'])

      call get_instance_state($instance) retrieve $instance_state

      sub timeout: 5m, on_timeout: handle_timeout() do
        while $instance_state != "terminated" do
          call get_instance_state($instance) retrieve $instance_state
          call task_label("Waiting for Terminate AWS Instance: " + $instance['resourceID'] + " " + $instance_state)
          sleep(10)
        end
      end
      call task_label("Completed Terminate AWS Instance: " + $instance['resourceID'])
    end
  end
end

