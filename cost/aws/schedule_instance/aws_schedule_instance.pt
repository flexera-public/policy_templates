# Core CWF functions for iterating through items
define execute_schedules($data, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call execute_schedule($instance, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define update_schedules($data, $param_schedule, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call update_schedule($instance, $param_schedule, $param_tag_schedule) retrieve $update_response, $window_active
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define delete_schedules($data, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call delete_schedule($instance, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define start_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call start_instance($instance)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define stop_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call stop_instance($instance)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define terminate_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call get_instance_state($instance) retrieve $initial_state

      if $initial_state != "terminated" && $initial_state != "pending"
        call terminate_instance($instance)
      else
        call task_label("Skipping terminating a terminated or pending instance: " + $instance["resourceName"] + " " + $initial_state)
      end
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

# Secondary CWF functions for taking action on individual instances
define execute_schedule($instance, $param_tag_schedule) return $response do
  if $instance['schedule'] == null
    call task_label("Skipping instance without schedule: " + $instance["resourceName"])
  else
    call task_label("Start executing schedule for instance: " + $instance["resourceName"])
    call get_instance_state($instance) retrieve $state
    if $state == "terminated" || $state == "pending"
      call task_label("Skipping attempting to modify a terminated or pending instance: " + $instance["resourceName"])
    else
      call parse_schedule($instance['schedule']) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

      call window_active($start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $timezone) retrieve $window_active

      if $window_active
        # if window active, should be running
        if $state == "running"
          call task_label("Skipping starting a running instance: " + $instance["resourceName"] + " " + $state)
        else
          if $state !~ /^(stopped|stopping)$/
            call task_label("Skipping starting an instance that is not stopped or stopping: " + $instance["resourceName"] + " " + $state)
          else
            call start_instance($instance) retrieve $start_response
          end
        end
      else
        if $state == "stopped"
          call task_label("Skipping stopping a stopped instance: " + $instance["resourceName"] + " " + $state)
        else
          # else window not active, should NOT be running
          if $state !~ /^(running|pending)$/
            call task_label("Skipping stopping an instance that not running or pending: " + $instance["resourceName"]+ " " + $state)
          else
            call stop_instance($instance) retrieve $stop_response
          end
        end
      end
    end
    call task_label("Finished executing schedule for instance: " + $instance["resourceName"])
  end
end

define parse_schedule($schedule) return $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone do
  # Time
  $schedule_time = split($schedule, ";")[0]

  $start_time = split($schedule_time, "-")[0]
  $start_hour = split($start_time, ":")[0]
  $start_minute = split($start_time, ":")[1]
  if ! $start_minute
    $start_minute = "00"
  end

  $stop_time = split($schedule_time, "-")[1]
  $stop_hour = split($stop_time, ":")[0]
  $stop_minute = split($stop_time, ":")[1]
  if ! $stop_minute
    $stop_minute = "00"
  end

  # Days
  $schedule_days = split($schedule, ";")[1]
  $start_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days
  $stop_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days

  # Timezone
  $timezone = "UTC"
  if size(split($schedule, ";")) >= 3
    $timezone = split($schedule, ";")[2]
  end
end

define update_schedule($instance, $schedule, $param_tag_schedule) return $response, $window_active do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    call parse_schedule($schedule) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

    $schedule_string = join([$start_hour, ":", $start_minute, "-", $stop_hour, ":", $stop_minute, ";", $schedule_days, ";", $timezone])

    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=CreateTags&Version=2016-11-15&ResourceId.1=" + $instance['resourceID']
    $params = $params + "&Tag.1.Key=" + $param_tag_schedule + "&Tag.1.Value="
    $params = $params + $schedule_string
    $url = $host + $href + $params
    call task_label("GET " + $url)

    $response = http_request(
      auth: $$auth_aws,
      host: $host,
      href: $href,
      https: true,
      verb: "get",
      query_strings:{
        "Action": "CreateTags",
        "Version": "2016-11-15",
        "ResourceId.1": $instance['resourceID'],
        "Tag.1.Key": $param_tag_schedule,
        "Tag.1.Value": $schedule_string
      }
    )

    call task_label("Create AWS instance tags response: " + to_s($response["code"]))
    $$all_responses << to_json({"req": "GET " + $url, "resp": $response})

    if $response["code"] != 202 && $response["code"] != 200
      raise "Unexpected response creating AWS instance tags: " + $instance['resourceID'] + " " + to_json($response)
    else
      call task_label("Create AWS instance tags response successful: " + $instance['resourceID'])
    end
  end
end

