define get_instance_state($instance) return $instance_state do
  $host = "ec2." + $instance["region"] + ".amazonaws.com"
  $href = "/"
  $params = "?Action=DescribeInstanceStatus&Version=2016-11-15&IncludeAllInstances=true&InstanceId.1=" + $instance['resourceID']
  $url = $host + $href + $params
  call task_label("POST " + $url)

  $response = http_request(
    auth: $$auth_aws,
    https: true,
    verb: "post",
    href: $href,
    host: $host,
    query_strings: {
      "Action": "DescribeInstanceStatus",
      "Version": "2016-11-15",
      "IncludeAllInstances": "true",
      "InstanceId.1": $instance['resourceID']
    }
  )

  call task_label("Get AWS Instance status response: " + to_s($response["code"]))
  $$all_responses << to_json({"req": "POST " + $url, "resp": $response})

  if $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response getting AWS Instance status: " + $instance['resourceID'] + " " + to_json($response)
  else
  $instance_state = $response["body"]["DescribeInstanceStatusResponse"]["instanceStatusSet"]["item"]["instanceState"]["name"]
  call task_label("Get AWS Instance status successful: " + $instance['resourceID'] + " " + $instance_state)
  end
end

define handle_error() do
  if !$$errors
    $$errors = []
  end
  $$errors << $_error["type"] + ": " + $_error["message"]
  # We check for errors at the end, and raise them all together
  # Skip errors handled by this definition
  $_error_behavior = "skip"
end

define handle_timeout() do
  $err = "Timeout reached. Skipping item and continuing."
  call task_label($err)
  raise $err
  $_timeout_behavior = "skip"
end

define task_label($label) do
  $now = strftime(now(), "%Y/%m/%d %H:%M:%S")
  if !$$label_log
    $$label_log = "[" + $now + "] "+ $label
  else
    $$label_log = $$label_log + "\n" + "[" + $now + "] "+ $label
  end
  task_label($label)
end

