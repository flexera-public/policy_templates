    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=DeleteTags&Version=2016-11-15&ResourceId.1=" + $instance['resourceID']
    $params = $params + "&Tag.1.Key=" + $param_tag_schedule
    $url = $host + $href + $params
