# Core CWF functions for iterating through items
define execute_schedules($data, $param_tag_schedule, $param_tag_schedule_action) return $all_responses do
  $$all_responses = []

  concurrent foreach $instance in $data do
    sub on_error: handle_error() do
      call execute_schedule($instance, $param_tag_schedule, $param_tag_schedule_action)
    end
  end

  if inspect($$errors) != "null"
    # Wrap newlines to put all error messages starting at the beginning of the line
    # Without, results in `raise: ....` which is not as clearly formatted in the UI
    raise "\n"+join($$errors, "\n")+"\n"
  end
end

define update_schedules($data, $param_schedule, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call update_schedule($instance, $param_schedule, $param_tag_schedule) retrieve $update_response, $window_active
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define delete_schedules($data, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call delete_schedule($instance, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define start_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call start_instance($instance)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define stop_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call stop_instance($instance)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define terminate_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call get_instance_state($instance) retrieve $initial_state

      if $initial_state != "terminated" && $initial_state != "pending"
        call terminate_instance($instance)
      else
        call task_label("Skipping terminating a terminated or pending instance: " + $instance["resourceName"] + " " + $initial_state)
      end
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

# Secondary CWF functions for taking action on individual instances
define execute_schedule($instance, $param_tag_schedule, $param_tag_schedule_action) return $response do
  if $instance['schedule'] == null
    call task_label("Skipping instance without schedule: " + $instance["resourceName"])
  else
    call task_label("Start executing schedule for instance: " + $instance["resourceName"])
    call get_instance_state($instance) retrieve $state
    if $state == "terminated" || $state == "pending"
      call task_label("Skipping attempting to modify a terminated or pending instance: " + $instance["resourceName"])
    else
      call parse_schedule($instance['schedule']) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

      call window_active($start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $timezone) retrieve $window_active

      # Get schedule action type, default to startstop if not specified
      $schedule_action = "startstop"
      if $instance["tags_object"] && $instance["tags_object"][$param_tag_schedule_action]
        $schedule_action = downcase($instance["tags_object"][$param_tag_schedule_action])
      end

      if $window_active
        # Window is active - determine if we should start or stop
        if $schedule_action =~ /^(start|startstop)$/
          # For start-only or startstop, start instance during window
          if $state == "running"
            call task_label("Skipping starting a running instance: " + $instance["resourceName"] + " " + $state)
          elsif $state !~ /^(stopped|stopping)$/
            call task_label("Skipping starting an instance that is not stopped or stopping: " + $instance["resourceName"] + " " + $state)
          else
            call start_instance($instance) retrieve $start_response
          end
        elsif $schedule_action == "stop"
          # For stop-only, stop instance during window
          if $state == "stopped"
            call task_label("Skipping stopping a stopped instance: " + $instance["resourceName"] + " " + $state)
          elsif $state !~ /^(running|pending)$/
            call task_label("Skipping stopping an instance that not running or pending: " + $instance["resourceName"]+ " " + $state)
          else
            call stop_instance($instance) retrieve $stop_response
          end
        end
      else
        # Window is not active - determine if we should stop
        if $schedule_action == "startstop"
          # Only startstop needs to handle stopping outside window
          if $state == "stopped"
            call task_label("Skipping stopping a stopped instance: " + $instance["resourceName"] + " " + $state)
          elsif $state !~ /^(running|pending)$/
            call task_label("Skipping stopping an instance that not running or pending: " + $instance["resourceName"]+ " " + $state)
          else
            call stop_instance($instance) retrieve $stop_response
          end
        end
      end
    end
    call task_label("Finished executing schedule for instance: " + $instance["resourceName"])
  end
end

define parse_schedule($schedule) return $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone do
  # Time
  $schedule_time = split($schedule, ";")[0]

  $start_time = split($schedule_time, "-")[0]
  $start_hour = split($start_time, ":")[0]
  $start_minute = split($start_time, ":")[1]
  if ! $start_minute
    $start_minute = "00"
  end

  $stop_time = split($schedule_time, "-")[1]
  $stop_hour = split($stop_time, ":")[0]
  $stop_minute = split($stop_time, ":")[1]
  if ! $stop_minute
    $stop_minute = "00"
  end

  # Days
  $schedule_days = split($schedule, ";")[1]
  $start_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days
  $stop_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days

  # Timezone
  $timezone = "UTC"
  if size(split($schedule, ";")) >= 3
    $timezone = split($schedule, ";")[2]
  end
end

define update_schedule($instance, $schedule, $param_tag_schedule) return $response, $window_active do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    call parse_schedule($schedule) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

    $schedule_string = join([$start_hour, ":", $start_minute, "-", $stop_hour, ":", $stop_minute, ";", $schedule_days, ";", $timezone])

    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=CreateTags&Version=2016-11-15&ResourceId.1=" + $instance['resourceID']
    $params = $params + "&Tag.1.Key=" + $param_tag_schedule + "&Tag.1.Value="
    $params = $params + $schedule_string
    $url = $host + $href + $params
    call task_label("GET " + $url)

    $response = http_request(
      auth: $$auth_aws,
      host: $host,
      href: $href,
      https: true,
      verb: "get",
      query_strings:{
        "Action": "CreateTags",
        "Version": "2016-11-15",
        "ResourceId.1": $instance['resourceID'],
        "Tag.1.Key": $param_tag_schedule,
        "Tag.1.Value": $schedule_string
      }
    )

    call task_label("Create AWS instance tags response: " + to_s($response["code"]))
    $$all_responses << to_json({"req": "GET " + $url, "resp": $response})

    if $response["code"] != 202 && $response["code"] != 200
      raise "Unexpected response creating AWS instance tags: " + $instance['resourceID'] + " " + to_json($response)
    else
      call task_label("Create AWS instance tags response successful: " + $instance['resourceID'])
    end
  end
end

define delete_schedule($instance, $param_tag_schedule) return $response do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=DeleteTags&Version=2016-11-15&ResourceId.1=" + $instance['resourceID']
    $params = $params + "&Tag.1.Key=" + $param_tag_schedule
    $url = $host + $href + $params
    call task_label("GET " + $url)

    $response = http_request(
      auth: $$auth_aws,
      host: $host,
      href: $href,
      https: true,
      verb: "get",
      query_strings:{
        "Action": "DeleteTags",
        "Version": "2016-11-15",
        "ResourceId.1": $instance['resourceID'],
        "Tag.1.Key": $param_tag_schedule
      }
    )

    call task_label("Delete AWS instance tags response: " + to_s($response["code"]))
    $$all_responses << to_json({"req": "GET " + $url, "resp": $response})

    if $response["code"] != 202 && $response["code"] != 200
      raise "Unexpected response deleting AWS instance tags: " + $instance['resourceID'] + " " + to_json($response)
    else
      call task_label("Delete AWS instance tags response successful: " + $instance['resourceID'])
    end
  end
end

define terminate_instance($instance) return $response do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=TerminateInstances&Version=2016-11-15&InstanceId.1=" + $instance['resourceID']
    $url = $host + $href + $params
    call task_label("POST " + $url)

    $response = http_request(
      auth: $$auth_aws,
      https: true,
      verb: "post",
      href: $href,
      host: $host,
      query_strings: {
        "Action": "TerminateInstances",
        "Version": "2016-11-15",
        "InstanceId.1": $instance['resourceID']
      }
    )

    call task_label("Terminate AWS Instance response: " + to_s($response["code"]))
    $$all_responses << to_json({"req": "POST " + $url, "resp": $response})

    if $response["code"] != 202 && $response["code"] != 200
      raise "Unexpected response terminating AWS Instance: " + $instance['resourceID'] + " " + to_json($response)
    else
      call task_label("Terminate AWS Instance successful: " + $instance['resourceID'])

      call get_instance_state($instance) retrieve $instance_state

      sub timeout: 5m, on_timeout: handle_timeout() do
        while $instance_state != "terminated" do
          call get_instance_state($instance) retrieve $instance_state
          call task_label("Waiting for Terminate AWS Instance: " + $instance['resourceID'] + " " + $instance_state)
          sleep(10)
        end
      end
      call task_label("Completed Terminate AWS Instance: " + $instance['resourceID'])
    end
  end
end

# Tertiary CWF functions for specific tasks
define window_active($start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $tz) return $window_active do
  $host = "bjlaftw4kh.execute-api.us-east-1.amazonaws.com"
  $href = "/production"
  $url = $host + $href
  call task_label("POST " + $url)

  $response = http_request(
    https: true,
    verb: "post",
    href: $href,
    host: $host,
    headers: { "content-type": "application/json" },
    body: {
      "start_hour": $start_hour,
      "start_minute": $start_minute,
      "start_rule": $start_rule,
      "stop_minute": $stop_minute,
      "stop_hour": $stop_hour,
      "stop_rule": $stop_rule,
      "tz": $tz
    }
  )

  call task_label("Post AWS API Gateway response: " + to_s($response["code"]))
  $$all_responses << to_json({"req": "POST " + $url, "resp": $response})

  if $response["code"] != 204 && $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response posting AWS API Gateway: " + $host + " " + to_json($response)
  else
    call task_label("Post AWS API Gateway successful: window_active=" + $response['body']['event_active'])
    $window_active = to_b($response['body']['event_active'])
  end
end

define start_instance($instance) return $response do
  call get_instance_state($instance) retrieve $state

  if $state == "terminated" || $state == "pending"
    call task_label("Skipping terminated or pending instance: " + $instance["resourceName"] + " " + $state)
  else
    $host = "ec2." + $instance["region"] + ".amazonaws.com"
    $href = "/"
    $params = "?Action=StartInstances&Version=2016-11-15&InstanceId.1=" + $instance['resourceID']
    $url = $host + $href + $params
    call task_label("POST " + $url)

    $errors = []
    $attempt_count = 0
    $success = false

    while $attempt_count < 3 && $success == false do
      $attempt_count = $attempt_count + 1

      $response = http_request(
        auth: $$auth_aws,
        https: true,
        verb: "post",
        href: $href,
        host: $host,
        query_strings: {
          "Action": "StartInstances",
          "Version": "2016-11-15",
          "InstanceId.1": $instance['resourceID']
        }
      )

      call task_label("Attempt "+to_s($attempt_count)+" Start AWS Instance response: " + to_s($response["code"]))
      $$all_responses << to_json({"req": "POST " + $url, "resp": $response})

      if $response["code"] != 202 && $response["code"] != 200
        $errors << "Attempt "+to_s($attempt_count)+" Unexpected response starting AWS Instance: "+ $instance["resourceID"] + " " + to_json($response)
        sleep(10) # Wait before retrying
      else
        call task_label("Start AWS Instance command successful: " + $instance['resourceID'])

        # Verify the requested state is reached
        call get_instance_state($instance) retrieve $instance_state

        sub timeout: 5m, on_timeout: handle_timeout() do
          while $instance_state != "running" do
            call get_instance_state($instance) retrieve $instance_state
            call task_label("Waiting for AWS Instance to start: " + $instance['resourceID'] + " " + $instance_state)
            sleep(10)
          end
        end

        if $instance_state != "running"
          $errors << "Attempt "+to_s($attempt_count)+" Timeout reached waiting for AWS Instance to start: "+ $instance["resourceID"]
        else
          call task_label("Start AWS Instance state verification successful: " + $instance['resourceID'] + " is now " + $instance_state)
          $success = true
        end
      end

      # If we've tried 3 times and still haven't succeeded, give up
      if $attempt_count >= 3 && !$success
        call task_label("Maximum attempts reached for starting AWS instance: " + $instance['resourceID'])
      end
    end

    if $success == false && size($errors) > 0
      raise join($errors, "\n")
    end
  end
end

