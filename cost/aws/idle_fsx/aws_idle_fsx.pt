end

datasource "ds_aws_idle_fsx_instances" do
  run_script $js_aws_idle_fsx_instances, $ds_aws_fsx_instances_with_stats, $ds_fsx_costs_grouped, $ds_applied_policy, $ds_currency, $param_stats_lookback, $param_min_savings
