# https://docs.aws.amazon.com/AWSEC2/latest/APIReference/API_DescribeImages.html
pagination "aws_pagination_describeimages_xml" do
  get_page_marker do
    body_path "//DescribeImagessResponse/nextToken"
  end
  set_page_marker do
    query "NextToken"
  end
end

