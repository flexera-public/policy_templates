escalation "esc_email" do
  automatic true
  label "Send Email"
  description "Send incident email"
  email $param_email
end

escalation "esc_downsize_instances" do
  automatic contains($param_automatic_action, "Downsize Underutilized Instances")
  label "Downsize Underutilized Instances"
  description "Approval to downsize all selected instances"
  run "downsize_instances", data
end

escalation "esc_terminate_instances" do
  automatic contains($param_automatic_action, "Terminate Idle Instances")
  label "Terminate Idle Instances"
  description "Approval to terminate all selected instances"
  run "terminate_instances", data, $param_boot_volume_preservation, $param_data_volume_preservation
end

###############################################################################
# Cloud Workflow
###############################################################################

define downsize_instances($data) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call downsize_instance($instance) retrieve $downsize_response
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define downsize_instance($instance) return $response do
  $host = "iaas." + $instance["region"] + ".oraclecloud.com"
  $href = "/20160918/instances/" + $instance["id"]
  $params = ""
  $url = $host + $href + $params

  task_label("PUT " + $url)

  $response = http_request(
    auth: $$auth_oracle,
    https: true,
    verb: "put",
    host: $host,
    href: $href,
    body: { "shape": $instance["newResourceType"] }
  )

  task_label("Put Oracle VM instance response: " + $instance["id"] + " " + to_json($response))
  $$all_responses << to_json({"req": "PUT " + $url, "resp": $response})

  if $response["code"] != 204 && $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response putting Oracle VM instance: "+ $instance["id"] + " " + to_json($response)
  else
    task_label("Put Oracle VM instance successful: " + $instance["id"])
  end
end

define terminate_instances($data, $param_boot_volume_preservation, $param_data_volume_preservation) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call terminate_instance($instance, $param_boot_volume_preservation, $param_data_volume_preservation) retrieve $terminate_response
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors, "\n")
  end
end

define terminate_instance($instance, $param_boot_volume_preservation, $param_data_volume_preservation) return $response do
  $host = "iaas." + $instance["region"] + ".oraclecloud.com"
  $href = "/20160918/instances/" + $instance["id"]

  $query_strings = {}
  $params = ""

  if $param_boot_volume_preservation == "Yes"
    $query_strings["preserveBootVolume"] = "true"
    $params = "?preserveBootVolume=true"
  else
    $query_strings["preserveBootVolume"] = "false"
    $params = "?preserveBootVolume=false"
  end

  if $param_data_volume_preservation == "Yes"
    $query_strings["preserveDataVolumesCreatedAtLaunch"] = "true"
    $params = $params + "&preserveDataVolumesCreatedAtLaunch=true"
  else
    $query_strings["preserveDataVolumesCreatedAtLaunch"] = "false"
    $params = $params + "&preserveDataVolumesCreatedAtLaunch=false"
  end

  $url = $host + $href + $params

  task_label("DELETE " + $url)

  $response = http_request(
    auth: $$auth_oracle,
    https: true,
    verb: "delete",
    host: $host,
    href: $href,
    query_strings: $query_strings
  )

  task_label("Delete Oracle VM instance response: " + $instance["id"] + " " + to_json($response))
  $$all_responses << to_json({"req": "DELETE " + $url, "resp": $response})

  if $response["code"] != 204 && $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response deleting Oracle VM instance: "+ $instance["id"] + " " + to_json($response)
  else
    task_label("Delete Oracle VM instance successful: " + $instance["id"])
  end
end

define handle_error() do
  if !$$errors
    $$errors = []
  end

  $$errors << $_error["type"] + ": " + $_error["message"]

  # We check for errors at the end, and raise them all together
  # Skip errors handled by this definition
  $_error_behavior = "skip"
end
