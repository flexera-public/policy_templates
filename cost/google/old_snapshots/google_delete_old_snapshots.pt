script "js_disk_to_region", type: "javascript" do
  parameters "ds_zonal_disks", "ds_regional_disks", "ds_zone_to_region"
  result "result"
  code <<-'EOS'
  disks = ds_zonal_disks.concat(ds_regional_disks)

  result = {}

  _.each(disks, function(disk) {
    id = disk["id"]
    zone = disk["zone"].split('/')[8]
