script "js_recommendation_logs", type: "javascript" do
  parameters "projectId", "resourceLink"
  result "request"
  code <<-'EOS'
  project_id = ['projects', projectId].join('/')
  zone = resourceLink.split('/')[6]
  name = resourceLink.split('/')[8]

  startTime = new Date()
  startTime.setDate(startTime.getDate() - 90)
  startTime = startTime.toISOString()

  filter = [
    "\"", projectId, "\" AND ",
    "\"", zone, "\" AND ",
    "\"", name, "\" AND ",
    "timestamp >= \"", startTime, "\" AND ",
    "protoPayload.methodName = \"v1.compute.instances.detachDisk\""
  ].join('')

  var request = {
    auth: "auth_google",
    pagination: "pagination_google",
    host: "logging.googleapis.com",
    verb: "POST",
    ignore_status: [400, 401, 402, 403, 404, 405, 406, 407, 408, 409, 410],
    path: "v2/entries:list",
    body_fields: {
      "resourceNames": [ project_id ],
      "filter": filter,
      "pageSize": 1000
    }
  }
EOS
end

