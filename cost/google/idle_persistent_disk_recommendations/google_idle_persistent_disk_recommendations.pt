script "js_recommendations_incident", type:"javascript" do
  parameters "ds_disks_region_filtered", "ds_recommendations", "ds_recommendation_logs_sorted", "ds_currency", "ds_currency_conversion", "ds_applied_policy", "param_min_savings", "param_unattached_days"
  result "result"
  code <<-'EOS'
  // Function for formatting currency numbers later
  function formatNumber(number, separator) {
    formatted_number = "0"

    if (number) {
      formatted_number = (Math.round(number * 100) / 100).toString().split(".")[0]

      if (separator) {
        withSeparator = ""

        for (var i = 0; i < formatted_number.length; i++) {
          if (i > 0 && (formatted_number.length - i) % 3 == 0) { withSeparator += separator }
          withSeparator += formatted_number[i]
        }

        formatted_number = withSeparator
      }

      decimal = (Math.round(number * 100) / 100).toString().split(".")[1]
      if (decimal) { formatted_number += "." + decimal }
    }

    return formatted_number
  }

  disks_object = {}

  _.each(ds_disks_region_filtered, function(disk) {
    selfLink = disk['selfLink'].replace("https://www.googleapis.com/compute/v1/", "")
    disks_object[selfLink] = disk
  })

  result = []
  total_savings = 0.0

  _.each(ds_recommendations, function(recommendation) {
    resource_link = recommendation['resourceLink'].replace("//compute.googleapis.com/", "")

    disk = null
    if (typeof(disks_object[resource_link]) == 'object') { disk = disks_object[resource_link] }

    if (disk != null) {
      costNanos = recommendation['costNanos']
      if (costNanos == null || costNanos == undefined) { costNanos = 0 }
      if (costNanos != null && costNanos != undefined) { costNanos = Number(costNanos) * -1 }

      costUnits = recommendation['costUnits']
      if (costUnits == null || costUnits == undefined) { costUnits = 0 }
      if (costUnits != null && costUnits != undefined) { costUnits = Number(costUnits) * -1 }

      savings = 0.0
      if (recommendation['duration'] != null && recommendation['duration'] != undefined) {
        duration = parseFloat(recommendation['duration'].replace("s", "")) / 2628288
        if (duration != 0) { savings = (costUnits + costNanos * Math.pow(10, -9)) / duration * ds_currency['exchange_rate'] }
      }

      detach_date = null
      days_unattached = null

      if (ds_recommendation_logs_sorted[disk['selfLink']] != undefined) {
        detach_date = new Date(ds_recommendation_logs_sorted[disk['selfLink']])
        today = new Date()
        time_difference = today.getTime() - detach_date.getTime()
        days_unattached = Math.round(time_difference / (1000 * 3600 * 24))
      }

      if (savings >= param_min_savings && (days_unattached == null || days_unattached >= param_unattached_days)) {
        total_savings += savings

        labels = []

        if (typeof(disk['labels']) == 'object') {
          _.each(Object.keys(disk['labels']), function(key) {
            labels.push([key, "=", disk['labels'][key]].join(''))
          })
        }

        result.push({
          resourceID: disk['id'],
          resourceName: disk['name'],
          kind: disk['kind'],
          type: disk['type'],
          description: disk['description'],
          status: disk['status'],
          size: disk['sizeGb'],
          selfLink: disk['selfLink'],
          zone: disk['zone'],
          region: disk['region'],
          creationTime: new Date(disk['creationTime']).toISOString(),
          accountID: disk['projectId'],
          accountName: disk['projectName'],
          projectNumber: disk['projectNumber'],
          age: disk['age'],
          priority: recommendation['priority'],
          primaryImpact: recommendation['primaryImpact'],
          primaryImpactCategory: recommendation['primaryImpact']['category'],
          recommendationDetails: recommendation['description'],
          recommenderSubtype: recommendation['recommenderSubtype'],
          state: recommendation['state'],
          policy_name: ds_applied_policy['name'],
          days_unattached: days_unattached,
          tags: labels.join(', '),
          savings: parseFloat(savings.toFixed(3)),
          savingsCurrency: ds_currency['symbol'],
          service: "Compute Engine",
          total_savings: "",
          message: ""
        })
      }
    }
  })

  // Sort by descending order of savings value
  result = _.sortBy(result, function(item) { return item['savings'] * -1 })

  savings_message = [
    ds_currency['symbol'], ' ',
    formatNumber(parseFloat(total_savings).toFixed(2), ds_currency['t_separator'])
  ].join('')

  // Message for incident output
  total_disks = ds_disks_region_filtered.length.toString()
  total_unused_disks = result.length.toString()
  unused_disks_percentage = (total_unused_disks / total_disks * 100).toFixed(2).toString() + '%'

  disk_noun = "disk"
  if (total_disks > 1) { disk_noun = "disks" }

  disk_verb = "is"
  if (total_unused_disks > 1) { disk_verb = "are" }

  findings = [
    "Out of ", total_disks, " ", disk_noun, " analyzed, ",
    total_unused_disks, " (", unused_disks_percentage,
    ") ", disk_verb, " idle and recommended for deletion. "
  ].join('')

  settings = [
    "Disks detached or created less than ", param_unattached_days, " days ago ",
    "are not included in the results. Disks with no value for the Days Unattached field ",
    "have either never been attached to an instance or were detached > 90 days ago. ",
    "This setting can be adjusted when editing or applying the policy.\n\n"
  ].join('')

  disclaimer = "Recommendations are generated by Google Cloud. Please refer to Google's documentation if different recommendations are desired."

  // Dummy item to ensure that the check statement in the policy executes at least once
  result.push({
    resourceID: "",
    resourceName: "",
    kind: "",
    type: "",
    description: "",
    labels: "",
    status: "",
    size: "",
    selfLink: "",
    zone: "",
    region: "",
    creationTime: "",
    accountID: "",
    accountName: "",
    projectNumber: "",
    age: "",
    priority: "",
    primaryImpact: "",
    primaryImpactCategory: "",
    recommendationDetails: "",
    recommenderSubtype: "",
    state: "",
    policy_name: "",
    tags: "",
    savings: "",
    savingsCurrency: "",
    service: "",
    total_savings: "",
    message: "",
    days_unattached: ""
  })

  result[0]['total_savings'] = savings_message
  result[0]['message'] = findings + settings + disclaimer
EOS
end

