script "js_merged_metrics", type: "javascript" do
  parameters "ds_azure_mysql_metrics", "ds_azure_mysql_resize_map", "ds_applied_policy", "param_stats_underutil_threshold_cpu_value", "param_stats_lookback", "param_unused_or_underutilized", "param_stats_threshold", "param_downsize_multiple"
  result "result"
  code <<-'EOS'
  // Function to calculate percentiles from metrics
  function percentile(arr, p) {
    // array needs to be sorted to select based on percentile
    arr.sort(function(a, b) { return a - b })

    // Get the index using desired percentile and array length
    index = (p / 100) * arr.length

    // Round index value to nearest integer and return the value of that element in sorted array arr
    return arr[Math.ceil(index) - 1]
  }

  // Function to extract capacity from MySQL SKUs
  function getCapacityFromSKU(sku_name) {
    if (sku_name.split('_')[1] == undefined || sku_name.split('_')[1].match(/\d+/) == null) { return null }
    return Number(sku_name.split('_')[1].match(/\d+/)[0])
  }

  result = []

  _.each(ds_azure_mysql_metrics, function(db) {
    tags = []

    if (typeof(db['tags']) == 'object') {
      tags = _.map(_.keys(db['tags']), function(key) { return key + "=" + db['tags'][key] })
    }

    instance = {
      id: db['id'],
      name: db['name'],
      region: db['region'],
      type: db['type'],
      tags: tags.join(', '),
      skuTier: db['skuTier'],
      availabilityZone: db['availabilityZone'],
      fqdn: db['fqdn'],
      state: db['state'],
      version: db['version'],
      publicNetworkAccess: db['publicNetworkAccess'],
      replicationRole: db['replicationRole'],
      replicaCapacity: db['replicaCapacity'],
      resourceGroup: db['resourceGroup'],
      subscriptionID: db['subscriptionID'],
      subscriptionName: db['subscriptionName'],
      lookbackPeriod: param_stats_lookback,
      threshold: param_stats_underutil_threshold_cpu_value,
      policy_name: ds_applied_policy['name'],
      resourceType: db['skuName'],
      capacity: getCapacityFromSKU(db['skuName'])
    }

    connection_metrics = null
    cpu_metrics = null

    _.each(db['value'], function(metric) {
      if (metric['name']['value'] == 'total_connections') {
        connection_metrics = metric['timeseries'][0]['data']
      }

      if (metric['name']['value'] == 'cpu_percent') {
        cpu_metrics = metric['timeseries'][0]['data']
      }
    })

    if (connection_metrics != null && param_unused_or_underutilized != "Underutilized") {
      max_connections = 0

      _.each(connection_metrics, function(metric) {
        if (typeof(metric['maximum']) == 'number' && metric['maximum'] > max_connections) {
          max_connections = metric['maximum']
        }
      })

      if (max_connections == 0) {
        instance['recommendationType'] = 'Delete'
        instance['newResourceType'] = 'Delete'

        instance["recommendationDetails"] = [
          "Delete Azure MySQL Flexible Server ", instance["name"], " ",
          "in Azure Subscription ", instance["subscriptionName"], " ",
          "(", instance["subscriptionID"], ")"
        ].join('')
      }
    }

    if (cpu_metrics != null && instance['recommendationType'] != 'Delete' && param_unused_or_underutilized != "Unused") {
      if (cpu_metrics.length > 0) {
        minimums = _.compact(_.pluck(cpu_metrics, 'minimum'))
        maximums = _.compact(_.pluck(cpu_metrics, 'maximum'))
        averages = _.compact(_.pluck(cpu_metrics, 'average'))

        cpu_minimum = null
        cpu_maximum = 0
        cpu_average = 0
        cpu_p90 = 0
        cpu_p95 = 0
        cpu_p99 = 0

        _.each(minimums, function(item) {
          if (cpu_minimum == null || item < cpu_minimum) { cpu_minimum = item }
        })

        _.each(maximums, function(item) {
          if (item > cpu_maximum) { cpu_maximum = item }
        })

        if (cpu_minimum == null) { cpu_minimum = 0 }

        if (averages.length > 0) {
          cpu_average = _.reduce(averages, function(memo, num) { return memo + num }, 0) / averages.length
        }

        if (minimums.length + maximums.length + averages.length > 0) {
          // combine all points from minimums, maximums, averages
          // use percentile() function to get the percentile values from all measured utilization points
          cpu_p90 = percentile(minimums.concat(maximums, averages), 90)
          cpu_p95 = percentile(minimums.concat(maximums, averages), 95)
          cpu_p99 = percentile(minimums.concat(maximums, averages), 99)
        }

        if (param_stats_threshold == "Average") { cpu_test_value = cpu_average }
        if (param_stats_threshold == "Maximum") { cpu_test_value = cpu_maximum }
        if (param_stats_threshold == "p90") { cpu_test_value = cpu_p90 }
        if (param_stats_threshold == "p95") { cpu_test_value = cpu_p95 }
        if (param_stats_threshold == "p99") { cpu_test_value = cpu_p99 }

        if (cpu_test_value <= param_stats_underutil_threshold_cpu_value) {
          instance['cpu_minimum'] = cpu_minimum
          instance['cpu_maximum'] = cpu_maximum
          instance['cpu_average'] = cpu_average
          instance['cpu_p90'] = cpu_p90
          instance['cpu_p95'] = cpu_p95
          instance['cpu_p99'] = cpu_p99
          instance['thresholdType'] = param_stats_threshold
          instance['recommendationType'] = 'Downsize'

          if (ds_azure_mysql_resize_map[instance['skuTier']] != undefined) {
            if (ds_azure_mysql_resize_map[instance['skuTier']][instance['resourceType']] != undefined) {
              if (typeof(ds_azure_mysql_resize_map[instance['skuTier']][instance['resourceType']]['down_sku']) == 'string') {
                instance['newResourceType'] = ds_azure_mysql_resize_map[instance['skuTier']][instance['resourceType']]['down_sku']
                instance['newCapacity'] = getCapacityFromSKU(instance['newResourceType'])

                if (param_downsize_multiple == "Yes") {
                  while (typeof(ds_azure_mysql_resize_map[instance['skuTier']][instance['newResourceType']]['down_sku']) == 'string' && cpu_test_value * 2 <= param_stats_underutil_threshold_cpu_value) {
                    cpu_test_value = cpu_test_value * 2
                    instance['newResourceType'] = ds_azure_mysql_resize_map[instance['skuTier']][instance['newResourceType']]['down_sku']
                    instance['newCapacity'] = getCapacityFromSKU(instance['newResourceType'])
                  }
                }

                instance["recommendationDetails"] = [
                  "Downsize Azure MySQL Flexible Server ", instance["name"], " ",
                  "in Azure Subscription ", instance["subscriptionName"], " ",
                  "(", instance["subscriptionID"], ") ",
                  "from SKU ", instance["resourceType"], " to ", instance["newResourceType"]
                ].join('')
              }
            }
          }
        }
      }
    }

    if (instance["recommendationDetails"] != undefined) { result.push(instance) }
  })
EOS
end

