script "js_instances_with_schedule", type: "javascript" do
  parameters "ds_azure_instances_with_status", "ds_applied_policy", "param_tag_schedule"
  result "result"
  code <<-EOS
  result = []
  now = new Date()

  _.each(ds_azure_instances_with_status, function(instance) {
    schedule = null

    tags = []

    tags_object = {}
    if (typeof(instance['tags']) == 'object') {
      // Store a copy of the tags object for export
      tags_object = instance['tags']

      // Loop through tags to build tags string for export
      _.each(_.keys(instance['tags']), function(key) {
        value = instance['tags'][key]

        tags.push(key + '=' + value)

        // If tag is the schedule tag, set schedule var for parsing
        if (key == param_tag_schedule) { schedule = value }
      })
    }

    // Check that we have a schedule and it is not explicitely disabled before attempting to parse the schedule tag value
    if (schedule != null) {
      console.log(JSON.stringify(instance))
      // schedule="8:00-17:30;MO,TU,WE,TH,FR;America/Los_Angeles"
      var schedule_split = schedule.split(';')

      // Parse Time - first part of schedule
      // Should always exist but check anyways
      if (schedule_split.length > 0) {
        var time = schedule_split[0]
        // start time is first part of time string split by '-'
        var start_time = time.split('-')[0]
        var start_time_split = start_time.split(':')
        if (start_time_split.length == 1) {
          var start_hour = start_time_split[0]
          var start_minute = '00'
        } else {
          var start_hour = start_time_split[0]
          var start_minute = start_time_split[1]
        }
        if (start_minute == null) { start_minute = '00' }

        // stop time is second part of time string split by '-'
        var stop_time = time.split('-')[1]
        // Handle both HH:mm-HH:mm and HH formats (8:00-9:00 or 8-9)
        var stop_time_split = stop_time.split(':')
        if (stop_time_split.length == 1) {
          var stop_hour = stop_time_split[0]
          var stop_minute = '00'
        } else {
          var stop_hour = stop_time_split[0]
          var stop_minute = stop_time_split[1]
        }
        if (stop_minute == null) { stop_minute = '00' }
      }

      // Parse Days - second part of schedule
      // Default to Everyday
      days = "SU,MO,TU,WE,TH,FR,SA"
      if (schedule_split.length > 1) {
        var days = schedule_split[1]
        // replace all '-' with ','
        // this is not needed as README calls out comma `,`, but may be helpful for some users that are also using GCP which uses dash separator `-`
        days = days.replace(/-/g, ',')
      }
      var start_rule = 'FREQ=WEEKLY;BYDAY=' + days.toUpperCase()
      var stop_rule = 'FREQ=WEEKLY;BYDAY=' + days.toUpperCase()

      // Parse Timezone (if defined)
      // Default to UTC
      var timezone = "UTC"
      if (schedule_split.length > 2) {
        timezone = schedule_split[2]
      }

      result.push({
        // Request Fields
        start_hour: start_hour,
        start_minute: start_minute,
        start_rule: start_rule,
        stop_hour: stop_hour,
        stop_minute: stop_minute,
        stop_rule: stop_rule,
        tz: timezone,
        // Resource Fields
        accountID: instance['subscriptionId'],
        accountName: instance['subscriptionName'],
        resourceGroup: instance['resourceGroup'],
        resourceName: instance['name'],
        resourceID: instance['resourceID'],
        resourceType: instance['resourceType'],
        resourceKind: instance['resourceKind'],
        region: instance['region'],
        osType: instance['osType'],
        service: "Microsoft.Compute",
        tags: tags.join(', '),
        tags_object: tags_object,
        policy_name: ds_applied_policy['name'],
        schedule: schedule
      })
    }
  })

  result = _.sortBy(result, 'resourceID')
  result = _.sortBy(result, 'region')
  result = _.sortBy(result, 'resourceGroup')
  result = _.sortBy(result, 'accountID')
EOS
end

