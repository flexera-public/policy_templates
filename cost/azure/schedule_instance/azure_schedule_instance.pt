# Core CWF functions for iterating through items
define execute_schedules($data, $param_azure_endpoint, $param_skipshutdown, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call execute_schedule($instance, $param_azure_endpoint, $param_skipshutdown, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

define update_schedules($data, $param_azure_endpoint, $param_schedule, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call update_schedule($instance, $param_azure_endpoint, $param_schedule, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

define delete_schedules($data, $param_azure_endpoint, $param_tag_schedule) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call delete_schedule($instance, $param_azure_endpoint, $param_tag_schedule)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

define start_instances($data, $param_azure_endpoint) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call start_instance($instance, $param_azure_endpoint)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

define stop_instances($data, $param_azure_endpoint, $param_skipshutdown) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call stop_instance($instance, $param_azure_endpoint, $param_skipshutdown)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

define delete_instances($data, $param_azure_endpoint) return $all_responses do
  $$all_responses = []

  foreach $instance in $data do
    sub on_error: handle_error() do
      call delete_instance($instance, $param_azure_endpoint)
    end
  end

  if inspect($$errors) != "null"
    raise join($$errors,"\n")
  end
end

# Secondary CWF functions for taking action on individual instances
define execute_schedule($instance, $param_azure_endpoint, $param_skipshutdown, $param_tag_schedule) return $response do
  if $instance['schedule'] == null
    call task_label("Skipping instance without schedule: " + $instance["resourceName"])
  else
    call task_label("Start executing schedule for instance: " + $instance["resourceName"])
    call get_instance_state($instance, $param_azure_endpoint) retrieve $state
    if $state =~ /^(deallocate|deallocating)$/
      call task_label("Skipping attempting to modify a deallocated instance: " + $instance["resourceName"] + " " + $status)
    else
      call parse_schedule($instance['schedule']) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

      call window_active($start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $timezone) retrieve $window_active

      if $window_active
        # if window active, should be running
        if $state == "running"
          call task_label("Skipping starting a running instance: " + $instance["resourceName"] + " " + $state)
        else
          if $state !~ /^(stopped|stopping)$/
            call task_label("Skipping starting an instance that is not stopped or stopping: " + $instance["resourceName"] + " " + $state)
          else
            call start_instance($instance, $param_azure_endpoint)
          end
        end
      else
        if $state =~ /^(stopped|stopping)$/
          call task_label("Skipping stopping a stopped instance: " + $instance["resourceName"] + " " + $state)
        else
          # else window not active, should NOT be running
          if $state !~ /^(running|creating)$/
            call task_label("Skipping stopping an instance that not running or creating: " + $instance["resourceName"]+ " " + $state)
          else
            call stop_instance($instance, $param_azure_endpoint, $param_skipshutdown)
          end
        end
      end
    end
    call task_label("Finished executing schedule for instance: " + $instance["resourceName"])
  end
end

define parse_schedule($schedule) return $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone do
  # Time
  $schedule_time = split($schedule, ";")[0]

  $start_time = split($schedule_time, "-")[0]
  $start_hour = split($start_time, ":")[0]
  $start_minute = split($start_time, ":")[1]
  if ! $start_minute
    $start_minute = "00"
  end

  $stop_time = split($schedule_time, "-")[1]
  $stop_hour = split($stop_time, ":")[0]
  $stop_minute = split($stop_time, ":")[1]
  if ! $stop_minute
    $stop_minute = "00"
  end

  # Days
  $schedule_days = split($schedule, ";")[1]
  $start_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days
  $stop_rule = "FREQ=WEEKLY;BYDAY=" + $schedule_days

  # Timezone
  $timezone = "UTC"
  if size(split($schedule, ";")) >= 3
    $timezone = split($schedule, ";")[2]
  end
end

define update_schedule($instance, $param_azure_endpoint, $schedule, $param_tag_schedule) do
  call parse_schedule($schedule) retrieve $start_hour, $start_minute, $start_rule, $stop_hour, $stop_minute, $stop_rule, $schedule_days, $timezone

  $new_tags = $instance["tags_object"]
  $new_tags[$param_tag_schedule] = $schedule

  $host = $param_azure_endpoint
  $href = $instance["id"]
  $params = "?api-version=2020-06-01"
  $url = $host + $href + $params
  call task_label("PATCH " + $url)

  $response = http_request(
    auth: $$auth_azure,
    verb: "patch",
    host: $host,
    https: true,
    href: $href,
    query_strings: {
      "api-version": "2020-06-01"
    },
    headers: {
      "cache-control": "no-cache",
      "content-type": "application/json"
    },
    body: { "tags": $new_tags }
  )

  call task_label("Update Azure instance tags response: " + to_s($response["code"]))
  $$all_responses << to_json({"req": "GET " + $url, "resp": $response})

  if $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response updating Azure instance tags: " + $instance["id"] + " " + to_json($response)
  else
    call task_label("Updating Azure instance tags successful: " + $instance["resourceName"])
  end
end

define delete_schedule($instance, $param_azure_endpoint, $param_tag_schedule) return $response do
  $new_tags = {}

  foreach $tag_key in keys($instance["tags_object"]) do
    if $tag_key != $param_tag_schedule
      $new_tags[$tag_key] = $instance["tags_object"][$tag_key]
    end
  end

  $host = $param_azure_endpoint
  $href = $instance["id"]
  $params = "?api-version=2020-06-01"
  $url = $host + $href + $params
  call task_label("PATCH " + $url)

  $response = http_request(
    auth: $$auth_azure,
    verb: "patch",
    host: $host,
    https: true,
    href: $href,
    query_strings: {
      "api-version": "2020-06-01"
    },
    headers: {
      "cache-control": "no-cache",
      "content-type": "application/json"
    },
    body: { "tags": $new_tags }
  )

  call task_label("Delete Azure instance tags response: " + to_s($response["code"]))
  $$all_responses << to_json({"req": "GET " + $url, "resp": $response})

  if $response["code"] != 202 && $response["code"] != 200
    raise "Unexpected response deleting Azure instance tags: " + $instance["id"] + " " + to_json($response)
  else
    call task_label("Deleting Azure instance tags successful: " + $instance["resourceName"])
  end
end

