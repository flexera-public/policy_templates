script "js_ahub_recommendations", type: "javascript" do
  parameters "ds_instance_costs_grouped", "ds_resources_region_filtered", "ds_currency", "ds_applied_policy", "param_resource_types"
  result "result"
  code <<-'EOS'
  function incident_map(resource_list) {
    return _.map(resource_list, function(resource) {
      tags = []

      if (typeof(resource['tags']) == 'object') {
        _.each(Object.keys(resource['tags']), function(key) {
          tags.push([key, "=", resource['tags'][key]].join(''))
        })
      }

      recommendationDetails = [
        "Apply Hybrid Use Benefit to Azure ", resource["type"],
        " resource ", resource["name"], " ",
        "in Azure Subscription ", resource["subscriptionName"],
        " (", resource["subscriptionId"], ")"
      ].join('')

      message = "Note: This policy does not track licenses or license availability. Please verify that you have a valid license for each resource AHUB is enabled for.\n\n"
      message += "Some fields may be empty, such as \"Version\" and \"Database Format\", if they are not applicable to the type of SQL resource being reported. For resources without a \"Version\" field, the version can usually be inferred from either the \"Image Offer\" or \"Database Format\" fields; more detailed version information can be obtained with the following SQL query: SELECT @@VERSION;"

      hourly_cost = null
      savingsCurrency = null

      server_id = resource["id"].toLowerCase().split('/')
      server_id.pop()
      server_id.pop()
      server_id = server_id.join('/')

      if (ds_instance_costs_grouped[resource["id"].toLowerCase()] != undefined) {
        hourly_cost = Math.round(ds_instance_costs_grouped[resource["id"].toLowerCase()]['hourly_cost'] * 1000) / 1000
        savingsCurrency = ds_currency["symbol"]
      }

      if (hourly_cost == null && ds_instance_costs_grouped[server_id] != undefined) {
        hourly_cost = Math.round(ds_instance_costs_grouped[server_id]['hourly_cost'] * 1000) / 1000
        savingsCurrency = ds_currency["symbol"]
      }

      if (hourly_cost == null && typeof(resource["virtualMachineResourceId"]) == 'string' && ds_instance_costs_grouped[resource["virtualMachineResourceId"].toLowerCase()] != undefined) {
        hourly_cost = Math.round(ds_instance_costs_grouped[resource["virtualMachineResourceId"].toLowerCase()]['hourly_cost'] * 1000) / 1000
        savingsCurrency = ds_currency["symbol"]
      }

      return {
        id: resource["id"],
        vmId: resource["virtualMachineResourceId"],
        resourceName: resource["name"],
        region: resource["region"],
        resourceType: resource["type"],
        imageOffer: resource["imageOffer"],
        imageSku: resource["imageSku"],
        licenseType: resource["licenseType"],
        skuName: resource["skuName"],
        skuTier: resource["skuTier"],
        skuCapacity: resource["skuCapacity"],
        skuFamily: resource["skuFamily"],
        databaseFormat: resource["databaseFormat"],
        version: resource["version"],
        resourceGroup: resource["resourceGroup"],
        accountID: resource["subscriptionId"],
        accountName: resource["subscriptionName"],
        recommendationDetails: recommendationDetails,
        message: message,
        tags: tags.join(", "),
        savingsCurrency: savingsCurrency,
        hourly_cost: hourly_cost,
        policy_name: ds_applied_policy['name'],
        service: "Microsoft.Sql"
      }
    })
  }

  result = incident_map(ds_resources_region_filtered['sql_virtualmachines']).concat(
    incident_map(ds_resources_region_filtered['sql_elastic_pools']),
    incident_map(ds_resources_region_filtered['sql_databases']),
    incident_map(ds_resources_region_filtered['sql_managed_instances'])
  )

  // Dummy entry to ensure validation runs at least once
  result.push({
    id: "",
    vmId: "",
    resourceName: "",
    region: "",
    resourceType: "",
    imageOffer: "",
    imageSku: "",
    licenseType: "",
    skuName: "",
    skuTier: "",
    skuCapacity: "",
    skuFamily: "",
    databaseFormat: "",
    version: "",
    resourceGroup: "",
    accountID: "",
    accountName: "",
    recommendationDetails: "",
    message: "",
    tags: "",
    savingsCurrency: "",
    hourly_cost: "",
    policy_name: "",
    service: ""
  })
EOS
end

