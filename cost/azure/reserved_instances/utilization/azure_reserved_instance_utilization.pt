  label "Azure"
  description "Select the Azure EA Credential from the list."
  tags "provider=azure_ea"
end

###############################################################################
# Pagination
###############################################################################

pagination "azure_pagination" do
  get_page_marker do
    body_path "nextLink"
  end
  set_page_marker do
    uri true
