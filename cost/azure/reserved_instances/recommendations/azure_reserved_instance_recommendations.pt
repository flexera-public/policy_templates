    "Red Hat": "RedHat",
    "MariaDB": "MariaDB",
    "Redis Cache": "RedisCache",
    "CosmosDB": "CosmosDB",
    "SQL Data Warehouse": "SqlDataWarehouse",
    "SUSE Linux": "SUSELinux",
    "App Service": "AppService",
    "Block Blob": "BlockBlob",
    "Azure Data Explorer": "AzureDataExplorer",
