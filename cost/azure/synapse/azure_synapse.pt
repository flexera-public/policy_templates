script "js_azure_metrics", type: "javascript" do
  parameters "resourceId", "param_azure_endpoint", "param_stats_lookback", "creationDate"
  result "request"
  code <<-EOS
  end_date = new Date()
  end_date.setMilliseconds(999)
  end_date.setSeconds(59)
  end_date.setMinutes(59)
  end_date.setHours(23)

  start_date = new Date()
  start_date.setDate(start_date.getDate() - param_stats_lookback)

  creation_date = new Date(creationDate)

  if (start_date.getDate() < creation_date.getDate()) {
      start_date.setDate(creation_date.getDate())
  }

  start_date.setMilliseconds(0)
  start_date.setSeconds(0)
  start_date.setMinutes(0)
  start_date.setHours(0)

  timespan = start_date.toISOString() + "/" + end_date.toISOString()

  var request = {
    auth: "auth_azure",
    pagination: "pagination_azure",
    host: param_azure_endpoint,
    verb: "GET",
    path: resourceId + "/providers/microsoft.insights/metrics",
    query_params: {
      "api-version": "2023-10-01",
      "timespan": timespan,
      "interval": "FULL",
      "metricnames": "DWUUsed,DWUUsedPercent,CPUPercent,MemoryUsedPercent,Connections",
      "aggregation": "average,maximum,minimum"
    },
    headers: {
      "User-Agent": "RS Policies"
    },
    // Ignore status 400, 403, and 404 which can be returned in certain (legacy) types of Azure Subscriptions
    ignore_status: [400, 403, 404]
  }
EOS
end


datasource "ds_underutil_and_paused_pools" do
  run_script $js_underutil_and_paused_pools, $ds_sql_pool_metrics, $ds_sql_pools, $ds_instance_costs_grouped, $param_stats_lookback, $param_stats_threshold, $param_paused_lookback, $ds_applied_policy, $param_simulate, $param_simulated_dwu_max, $param_simulated_dwu_usage_percent
end

script "js_underutil_and_paused_pools", type: "javascript" do
  parameters "ds_sql_pool_metrics", "ds_sql_pools", "ds_instance_costs_grouped","param_stats_lookback", "param_stats_threshold", "param_paused_lookback", "ds_applied_policy","param_simulate", "param_simulated_dwu_max", "param_simulated_dwu_usage_percent"
  result "result"
  code <<-EOS
  result = []
  pools = {}

  var paused_total_savings = 0.0
  var underutil_total_savings = 0.0
  var paused_list = []
  var underutil_list = []

  _.each(ds_sql_pools, function(item) {
    id = item['resourceId'].toLowerCase()
    pools[id] = item
  })

  _.each(ds_sql_pool_metrics, function(item) {
    id = item['resourceId'].toLowerCase();
  
    //DWU Simulation
    var simulationResult = { originalDWU: 0, newDWU: 0, originalUsagePercent: 0 }
    if (param_simulate === 'Yes') {
        var currentDWU = param_simulated_dwu_max
        var currentUsagePercent = param_simulated_dwu_usage_percent
        var adjustedDWU = 1000
    
        var dwuThresholds = [
            { limit: 85, dwu: 900 },
            { limit: 75, dwu: 800 },
            { limit: 65, dwu: 700 },
            { limit: 55, dwu: 600 },
            { limit: 45, dwu: 500 },
            { limit: 35, dwu: 400 },
            { limit: 25, dwu: 300 },
            { limit: 15, dwu: 200 },
            { limit: 5, dwu: 100 }
        ]
    
        for (var i = 0; i < dwuThresholds.length; i++) {
            if (currentUsagePercent <= dwuThresholds[i].limit) {
                adjustedDWU = dwuThresholds[i].dwu;
            } else {
                break
            }
        }
        // Assign the simulation results
        simulationResult.originalDWU = currentDWU
        simulationResult.newDWU = adjustedDWU
        simulationResult.originalUsagePercent = currentUsagePercent
    }

    total_cost = 0.0
    if (ds_instance_costs_grouped[id] != undefined) { total_cost = ds_instance_costs_grouped[id] }

    metrics = {}
    values = item['value']

    _.each(values, function(metric) {
      metrics[metric['name']['value']] = metric['timeseries'][0]['data']
    })

    var connections = parseInt(metrics['Connections'][0]['maximum'])
    var dwuUsedPercent = metrics['DWUUsedPercent'][0]['maximum']

    var isPaused = false
    var isUnderutil = false
    if (connections == 0) { isPaused = true }
    if (dwuUsedPercent <= param_stats_threshold) { isUnderutil = true}

    if (isPaused) {

      recommendationDetails = [
        "Pause sql pool ", item['resourceId'], " ",
        "in Azure Account ", item['subscriptionName'], " ",
        "(", item['subscriptionId'], ")"
      ]
      
      item["resourceType"] = pools[id]['sku']     
      item["status"] = pools[id]['status'],
      item["creationDate"] = pools[id]['creationDate'],
      item["maxSizeBytes"] = pools[id]['maxSizeBytes'],
      item["provisioningState"] = pools[id]['provisioningState'],
      item["storageAccountType"] = pools[id]['storageAccountType'],
      item["DWUUsed"] = metrics['DWUUsed'][0]['maximum'],
      item["DWUUsedPercent"] = metrics['DWUUsedPercent'][0]['maximum'],
      item["MemoryUsedPercent"] = metrics['MemoryUsedPercent'][0]['maximum'],
      item["Connections"] = connections,
      item["service"] = "Microsoft.Synapse",
      item["lookbackPeriod"] = param_stats_lookback,
      item["pausedLookbackPeriod"] = param_paused_lookback,
      item["threshold"] = param_stats_threshold,
      item["savings"] = parseFloat(parseFloat(total_cost).toFixed(3)),
      item["recommendationDetails"] = recommendationDetails.join(''),
      item["simulatedOriginalDWU"] = simulationResult.originalDWU,
      item["simulatedNewDWU"] = simulationResult.newDWU,
      item["simulatedUsagePercent"] = simulationResult.originalUsagePercent
  

      paused_list.push(item)  ### BJ This list will be used later in the escalation logic to actually pause the instances
      paused_total_savings += total_cost

    } else if (isUnderutil) {

      recommendationDetails = [
        "Pause sql pool ", item['resourceId'], " ",
        "in Azure Account ", item['subscriptionName'], " ",
        "(", item['subscriptionId'], ")"
      ]

      item["resourceType"] = pools[id]['sku']     
      item["status"] = pools[id]['status'],
      item["creationDate"] = pools[id]['creationDate'],
      item["maxSizeBytes"] = pools[id]['maxSizeBytes'],
      item["provisioningState"] = pools[id]['provisioningState'],
      item["storageAccountType"] = pools[id]['storageAccountType'],
      item["DWUUsed"] = metrics['DWUUsed'][0]['maximum'],
      item["DWUUsedPercent"] = metrics['DWUUsedPercent'][0]['maximum'],
      item["MemoryUsedPercent"] = metrics['MemoryUsedPercent'][0]['maximum'],
      item["Connections"] = connections,
      item["service"] = "Microsoft.Synapse",
      item["lookbackPeriod"] = param_stats_lookback,
      item["pausedLookbackPeriod"] = param_paused_lookback,
      item["threshold"] = param_stats_threshold,
      item["savings"] = parseFloat(parseFloat(total_cost / 2).toFixed(3)),
      item["recommendationDetails"] = recommendationDetails.join(''),
      item["simulatedOriginalDWU"] = simulationResult.originalDWU,
      item["simulatedNewDWU"] = simulationResult.newDWU,
      item["simulatedUsagePercent"] = simulationResult.originalUsagePercent
  
      
      underutil_list.push(item)
      underutil_total_savings += total_cost / 2
    }
  })

  if (underutil_list.length > 0) {
    underutil_list[0]['underutil_total_savings'] = underutil_total_savings
    underutil_list[0]['policy_name'] = ds_applied_policy['name']
  }

  if (paused_list.length > 0) {
    paused_list[0]['paused_total_savings'] = paused_total_savings
    paused_list[0]['policy_name'] = ds_applied_policy['name']
  }
  
  result = {
    paused_list: paused_list,
    underutil_list: underutil_list
  }
EOS
end

