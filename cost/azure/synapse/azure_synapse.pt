##### BJ Escalation to automatically pause underutilized Synapse SQL Pools based on specific conditions
escalation "esc_pause_instances" do
  automatic contains($param_automatic_pause, "Yes") # This checks if the automatic pausing is enabled in the policy parameters
  label "Pause Underutilized Instances"
  description "Automatically pause underutilized Synapse SQL Pools that meet defined criteria"
  run "pause_instances", $data, $param_azure_endpoint # This triggers the cloud workflow to pause the instances
end

###############################################################################
# Cloud Workflow
###############################################################################


##### BJ Defines a cloud workflow to handle the pausing of underutilized Synapse SQL Pools
define pause_instances($data, $param_azure_endpoint) return $all_responses do
  $all_responses = [] # Initialize an array to collect responses from each pause operation

  foreach $instance in $data do # Iterate through each instance that has been flagged for potential pausing
    sub on_error: handle_error() do # Error handling subroutine to capture and manage errors during the pause process
      call pause_instance($instance, $param_azure_endpoint) retrieve $pause_response # Call the function to pause an individual instance
    end
  end

  if inspect($$errors) != "null" # Check if there were any errors captured during the operations
    raise join($$errors,"\n") # Raise a combined error message if there are errors
  end
end

##### BJ Defines the specific HTTP request to pause an individual Synapse SQL Pool
define pause_instance($instance, $param_azure_endpoint) return $response do
  $host = $param_azure_endpoint # Azure API endpoint
  $href = $instance["resourceId"] + "/pause" # Specific API path to send the pause command
  $params = "?api-version=2021-06-01" # API version parameter
  $url = $host + $href + $params # Full URL for the API request

  task_label("POST " + $url) # Label for logging

  $response = http_request(
    auth: $$auth_azure,
    https: true,
    verb: "post",
    host: $host,
    href: $href,
    query_strings: { "api-version": "2021-06-01" },
    headers: {
      "cache-control": "no-cache",
      "content-type": "application/json"
    }
  ) # Send the HTTP request to pause the instance

  task_label("Pause Azure Synapse SQL Pool response: " + $instance["resourceId"] + " " + to_json($response))
  $$all_responses << to_json({"req": "POST " + $url, "resp": $response}) # Log the response

  if $response["code"] != 202 && $response["code"] != 200 # Check the response code to ensure the operation was successful
    raise "Unexpected response pausing Azure Synapse SQL Pool: "+ $instance["resourceId"] + " " + to_json($response)
  else
    task_label("Pause Azure Synapse SQL Pool successful: " + $instance["resourceId"]) # Log a successful operation
  end
end


