script "js_azure_metrics", type: "javascript" do
  parameters "resourceId", "param_azure_endpoint", "param_stats_lookback", "creationDate"
  result "request"
  code <<-EOS
  end_date = new Date()
  end_date.setMilliseconds(999)
  end_date.setSeconds(59)
  end_date.setMinutes(59)
  end_date.setHours(23)

  start_date = new Date()
  start_date.setDate(start_date.getDate() - param_stats_lookback)

  creation_date = new Date(creationDate)

  if (start_date.getDate() < creation_date.getDate()) {
      start_date.setDate(creation_date.getDate())
  }

  start_date.setMilliseconds(0)
  start_date.setSeconds(0)
  start_date.setMinutes(0)
  start_date.setHours(0)

  timespan = start_date.toISOString() + "/" + end_date.toISOString()

  var request = {
    auth: "auth_azure",
    pagination: "pagination_azure",
    host: param_azure_endpoint,
    verb: "GET",
    path: resourceId + "/providers/microsoft.insights/metrics",
    query_params: {
      "api-version": "2023-10-01",
      "timespan": timespan,
      "interval": "FULL",
      "metricnames": "DWUUsed,DWUUsedPercent,CPUPercent,MemoryUsedPercent,Connections",
      "aggregation": "average,maximum,minimum"
    },
    headers: {
      "User-Agent": "RS Policies"
    },
    // Ignore status 400, 403, and 404 which can be returned in certain (legacy) types of Azure Subscriptions
    ignore_status: [400, 403, 404]
  }
EOS
end

datasource "ds_pools_with_metrics" do
  run_script $js_pools_with_metrics, $ds_sql_pool_metrics, $ds_sql_pools, $param_stats_lookback, $param_stats_threshold
end

script "js_pools_with_metrics", type: "javascript" do
  parameters "ds_sql_pool_metrics", "ds_sql_pools", "param_stats_lookback", "param_stats_threshold"
  result "result"
  code <<-EOS
  result = []
  pools = {}

  _.each(ds_sql_pools, function(item) {
      id = item['resourceId'].toLowerCase()

      pools[id] = item
  })

  _.each(ds_sql_pool_metrics, function(item) {
      id = item['resourceId'].toLowerCase()

      metrics = {}
      values = item['value']

      _.each(values, function(metric) {
          metrics[metric['name']['value']] = metric['timeseries'][0]['data']

      })
      result.push({
        resourceName: item['resourceName'],
        resourceGroup: item['resourceGroup'],
        resourceId: item['resourceId'],
        region: item['region'],
        resourceType: pools[id]['sku'],
        subscriptionId: item['subscriptionId'],
        subscriptionName: item['subscriptionName'],
        tags: item['tags'],
        region: item['region'],
        status: pools[id]['status'],
        creationDate: pools[id]['creationDate'],
        maxSizeBytes: pools[id]['maxSizeBytes'],
        provisioningState: pools[id]['provisioningState'],
        storageAccountType: pools[id]['storageAccountType'],
        DWUUsed: metrics['DWUUsed'][0]['maximum'],
        DWUUsedPercent: metrics['DWUUsedPercent'][0]['maximum'],
        MemoryUsedPercent: metrics['MemoryUsedPercent'][0]['maximum'],
        Connections: metrics['Connections'][0]['maximum'],
        service: "Microsoft.Synapse",
        lookbackPeriod: param_stats_lookback,
        threshold: param_stats_threshold

    })
  })
EOS
end



