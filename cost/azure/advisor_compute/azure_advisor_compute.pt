    cpuP95: '',
    memP95: '',
    netP95: '',
    savings: '',
    savingsCurrency: '',
    service: '',
    policy_name: '',
    total_savings: '',
    message: ''
  })

  result[0]['total_savings'] = savings_message
  result[0]['message'] = findings + disclaimer
EOS
end

