policy "pol_azure_rightsize_managed_disks" do
  validate $ds_disk_rightsizing_recommendations do
    summary_template "There are {{ len data.recommendations }} oversized Azure Managed Disks, you could save ${{ data.monthlySavings }} USD!"
    check logic_not(val(data, "raiseIncident"))
    escalate $esc_email
    export "recommendations" do
      resource_level true
