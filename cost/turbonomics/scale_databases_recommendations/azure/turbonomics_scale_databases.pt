name "Turbonomics Scale Databases Recommendations Azure"
rs_pt_ver 20180301
type "policy"
short_description "POC turbonomics policy for scaling Databases [README](https://github.com/flexera-public/policy_templates/tree/master/cost/turbonomics/scale_database_server_recommendations) and [docs.flexera.com/flexera/EN/Automation](https://docs.flexera.com/flexera/EN/Automation/AutomationGS.htm) to learn more."
severity "low"
category "Cost"
default_frequency "daily"
info(
  version: "0.1",
  provider: "Azure",
  source: "Turbonomics",
  service: "SQL",
  policy_set: "Scale Databases",
  recommendation_type: "Usage Reduction"
)

