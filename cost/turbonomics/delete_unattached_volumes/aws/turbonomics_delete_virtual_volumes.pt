    summary_template "{{ rs_project_name }} (Account ID: {{ rs_project_id }}): {{ len data.instances }} Turbonomic Unattached Volumes found"
    detail_template <<-EOS
## Turbonomic Unattached Volumes
{{data.message}}
EOS
    check eq(size(val(data, "instances")), 0)
    export "instances" do
