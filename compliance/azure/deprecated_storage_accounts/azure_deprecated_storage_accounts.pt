name "Azure Deprecated Storage Accounts"
rs_pt_ver 20180301
type "policy"
short_description "Reports active GPv1 Azure Storage Accounts that Microsoft will migrate to GPv2 in October 2026. See the [README](https://github.com/flexera-public/policy_templates/tree/master/compliance/azure/deprecated_storage_accounts/) and [docs.flexera.com/flexera/EN/Automation](https://docs.flexera.com/flexera/EN/Automation/AutomationGS.htm) to learn more."
long_description ""
doc_link "https://github.com/flexera-public/policy_templates/tree/master/compliance/azure/deprecated_storage_accounts/"
category "Cost"
severity "low"
default_frequency "weekly"
info(
  version: "0.1.0",
  provider: "Azure",
  service: "Storage Accounts",
  policy_set: "Deprecated Storage Accounts",
  hide_skip_approvals: "true"
)

