end

###############################################################################
# Policy
###############################################################################

policy "pol_csv_for_rbds_from_csv_in_policy_template" do
  validate $ds_csv_raw do
    summary_template "CSV for Rule-Based Dimensions from CSV"
    detail_template ''
    check eq(0, 0)
  end
end
