script "js_dimensions_for_report", type: "javascript" do
  parameters "ds_dimensions_list", "param_dimension_list"
  result "result"
  code <<-'EOS'
  result = []

  // We do it this way, instead of filtering ds_dimensions_list, to ensure the output
  // is in the same order as param_dimension_list
  _.each(param_dimension_list, function(param) {
    dimension = _.find(ds_dimensions_list, function(item) {
      return item["name"].toLowerCase().trim() == param.toLowerCase().trim() || item["id"].toLowerCase().trim() == param.toLowerCase().trim()
