end

script "js_applied_policy_table", type: "javascript" do
  parameters "ds_applied_policies_cleaned", "ds_applied_aggregates"
  result "result"
  code <<-'EOS'
  result = {}
  _.each(ds_applied_policies_cleaned, function(policy) { result[policy["id"]] = policy })
  _.each(ds_applied_aggregates, function(aggregate) { result[aggregate["id"]] = aggregate })
