script "js_applied_policies", type: "javascript" do
  parameters "ds_flexera_api_hosts", "param_children", "rs_org_id", "rs_project_id"
  result "request"
  code <<-'EOS'
  var request = {
    auth: "auth_flexera",
    host: ds_flexera_api_hosts["flexera"],
    path: [ "/policy/v1/orgs/", rs_org_id, "/projects/", rs_project_id, "/applied-policies" ].join('')
  }

  if (param_children == "Exclude Children") {
    request["query_params"] = { filter: "metaParentPolicyId eq \"null\"" }
  }
EOS
end

datasource "ds_applied_policies_cleaned" do
  run_script $js_applied_policies_cleaned, $ds_applied_policies
end

script "js_applied_policies_cleaned", type: "javascript" do
  parameters "ds_applied_policies"
  result "result"
  code <<-'EOS'
  result = _.map(ds_applied_policies, function(policy) {
    new_policy = {}
    _.each(_.keys(policy), function(key) { new_policy[key] = policy[key] })

    new_policy["meta_parent_policy_id"] = policy["parent"] ? policy["parent"].split(':')[6] : null

    return new_policy
  })
EOS
end

