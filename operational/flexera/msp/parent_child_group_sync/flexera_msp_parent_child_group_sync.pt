{{ range data }}{{ . }}\n\n{{ end }}
EOS
    check eq(size(data), 0)
  end

  validate $ds_context do
    summary_template "_context_incident"
    detail_template "{{ data }}"
    check eq(1, 0)
    escalate $esc_auto_resolve
  end
end

