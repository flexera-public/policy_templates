name "Azure VMs Not Using Managed Disks"
rs_pt_ver 20180301
type "policy"
short_description "Report any Azure virtual machines that are not using managed disks. See the [README](https://github.com/flexera-public/policy_templates/tree/master/operational/azure/vms_without_managed_disks) and [docs.flexera.com/flexera/EN/Automation](https://docs.flexera.com/flexera/EN/Automation/AutomationGS.htm) to learn more."
long_description ""
category "Operational"
severity "low"
default_frequency "weekly"
info(
  version: "4.0.0",
  provider: "Azure",
  service: "Compute",
  policy_set: ""
)

