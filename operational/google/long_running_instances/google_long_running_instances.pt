script "js_long_running_instances", type: "javascript" do
  parameters "ds_running_instances", "ds_applied_policy", "ds_vm_costs_grouped", "ds_currency", "param_minimum_age", "param_incident_csv"
  result "result"
  code <<-'EOS'
  csv_message = param_incident_csv == "false" ? "" : "Incident table CSV file has been attached to emails for this incident."

  now = new Date()

  long_running_instances = _.reject(ds_running_instances, function(instance) {
    running_days = (now - new Date(instance['lastStartTimestamp'])) / 1000 / 60 / 60 / 24
    return running_days >= param_minimum_age
  })

  result = _.map(long_running_instances, function(instance) {
    cost = 0.0
    if (ds_vm_costs_grouped[instance['id'].toLowerCase()]) { cost = ds_vm_costs_grouped[instance['id'].toLowerCase()] }
    if (ds_vm_costs_grouped[instance['name'].toLowerCase()]) { cost = ds_vm_costs_grouped[instance['name'].toLowerCase()] }

    labels = []

    if (typeof(instance['labels']) == 'object') {
      _.each(Object.keys(instance['labels']), function(key) {
        labels.push(key + '=' + instance['labels'][key])
      })
    }

    return {
      resourceID: instance['id'],
      resourceName: instance['name'],
      description: instance['description'],
      status: instance['status'],
      selfLink: instance['selfLink'],
      platform: instance['cpuPlatform'],
      machineType: instance['machineType'],
      kind: instance['kind'],
      accountID: instance['projectId'],
      accountName: instance['projectName'],
      zone: instance['zone'],
      region: instance['region'],
      lastStartTimestamp: instance['lastStartTimestamp'],
      daysRunning: Math.round((now - new Date(instance['lastStartTimestamp'])) / 1000 / 60 / 60 / 24 * 10) / 10,
      costCurrency: ds_currency['symbol'],
      cost: Math.round(cost * 1000) / 1000,
      policy_name: ds_applied_policy['name'],
      tags: labels.join(', '),
      lookbackPeriod: param_minimum_age,
      service: 'Compute Engine',
      message: ''
    }
  })

  instances_total = ds_running_instances.length.toString()
  long_instances_total = result.length.toString()
  long_instances_percentage = (long_instances_total / instances_total * 100).toFixed(2).toString() + '%'

  instance_noun = "VM"
  if (instances_total > 1) { instance_noun = "VMs" }

  day_noun = "day"
  if (param_minimum_age > 1) { day_noun = "days" }

  has_verb = "has"
  if (long_instances_total > 1) { has_verb = "have" }

  findings = [
    "Out of ", instances_total, " Google ", instance_noun, " analyzed, ",
    long_instances_total, " (", long_instances_percentage,
    ") ", has_verb, " been running for longer than ", param_minimum_age,
    " ", day_noun, ".\n\n"
  ].join('')

  disclaimer = "The above settings can be modified by editing the applied policy and changing the appropriate parameters.\n\n"

  // Add a dummy entry to ensure that the policy check statement executes at least once
  result.push({
    resourceID: "",
    resourceName: "",
    description: "",
    status: "",
    selfLink: "",
    platform: "",
    machineType: "",
    kind: "",
    lookbackPeriod: "",
    accountID: "",
    accountName: "",
    zone: "",
    region: "",
    lastStartTimestamp: "",
    daysRunning: "",
    costCurrency: "",
    cost: "",
    policy_name: "",
    tags: "",
    service: "",
    message: ""
  })

  result[0]['message'] = findings + disclaimer + csv_message
EOS
end

