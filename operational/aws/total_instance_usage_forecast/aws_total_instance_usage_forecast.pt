      end
      field "instance_family" do
        label "Instance Family"
      end
      field "total_instance_units" do
        label "Instance Units Used"
      end
      field "instance_unit" do
        label "Instance Unit"
      end
      field "time_unit" do
        label "Time Unit"
      end
    end
  end
end

