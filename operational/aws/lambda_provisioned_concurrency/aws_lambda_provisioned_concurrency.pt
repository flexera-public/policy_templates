datasource "ds_functions_without_concurrency" do
  run_script $js_functions_without_concurrency, $ds_function_published_versions, $ds_concurrency_table, $ds_aws_account, $ds_applied_policy, $param_incident_csv
end

script "js_functions_without_concurrency", type: "javascript" do
  parameters "ds_function_published_versions", "ds_concurrency_table", "ds_aws_account", "ds_applied_policy", "param_incident_csv"
  result "result"
  code <<-'EOS'
  csv_message = param_incident_csv == "false" ? "" : "Incident table CSV file has been attached to emails for this incident."

  bad_functions = _.filter(ds_function_published_versions, function(item) {
    id = item['arn'] + '___' + item['version']
    return typeof(ds_concurrency_table[id]) != 'object' || ds_concurrency_table[id].length == 0
  })

  result = _.map(bad_functions, function(item) {
    tags = []

    if (typeof(item['tags']) == 'object') {
      tags = _.map(_.keys(item['tags']), function(key) { return key + '=' + item['tags'][key] })
    }

    return {
      accountID: ds_aws_account['id'],
      accountName: ds_aws_account['name'],
      resourceID: item['arn'],
      resourceName: item['name'],
      architectures: item['architectures'],
      description: item['description'],
      lastModified: new Date(item['lastModified']).toISOString(),
      masterArn: item['masterArn'],
      memorySize: item['memorySize'],
      packageType: item['packageType'],
      revisionId: item['revisionId'],
      role: item['role'],
      signingJobArn: item['signingJobArn'],
      signingProfileVersionArn: item['signingProfileVersionArn'],
      timeout: item['timeout'],
      version: item['version'],
      region: item['region'],
      tags: tags.join(', '),
      service: "AWS Lambda",
      policy_name: ds_applied_policy['name'],
      csv_message: csv_message
    }
  })
EOS
end

###############################################################################
# Policy
###############################################################################

policy "pol_functions_without_concurrency" do
  validate_each $ds_functions_without_concurrency do
    summary_template "{{ with index data 0 }}{{ .policy_name }}{{ end }}: {{ len data }} AWS Lambda Function Versions Without Provisioned Concurrency Found"
    detail_template "{{ with index data 0 }}{{ .csv_message }}{{ end }}"
    check logic_or($ds_parent_policy_terminated, eq(val(item, "resourceID"), ""))
    escalate $esc_email
    hash_exclude "lastModified", "tags"
    export do
      resource_level true
      field "accountID" do
        label "Account ID"
      end
      field "accountName" do
        label "Account Name"
      end
      field "resourceID" do
        label "ARN"
      end
      field "resourceName" do
        label "Name"
      end
      field "version" do
        label "Version"
      end
      field "region" do
        label "Region"
      end
      field "tags" do
        label "Tags"
      end
      field "lastModified" do
        label "Last Modified"
      end
      field "service" do
        label "Service"
      end
      field "id" do
        label "ID"
        path "resourceID"
      end
    end
  end
end

