      "Accept": "application/json",
      "Content-Encoding": "amz-1.0"
    }
    query_params: {
      'Version': '2010-08-01'
    },
    body: JSON.stringify(body)
  }
EOS
end

#PARSE CLOUDWATCH DATA INTO JAVASCRIPT OBJECT
